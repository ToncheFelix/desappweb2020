@model IEnumerable<DVDCollection.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}

<h1>Actors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Actor Name: <input type="text" name="SearchString"  />
            <input type="submit" value="Search" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActorFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActorNotes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActorFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActorNotes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ActorID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ActorID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ActorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
