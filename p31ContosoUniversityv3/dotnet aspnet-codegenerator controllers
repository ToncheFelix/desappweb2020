dotnet aspnet-codegenerator controller

 -name StudentsController 
 -m ContosoUniversity.Models.Student 
 -dc ContosoUniversity.Data.SchoolContext  en que parte
 --relativeFolderPath Controllers 			rutas relativas
 --useDefaultLayout 						rutas default
 --referenceScriptLibraries 
 -f 										sobre escribe




